<div class="bg-gradient-to-br from-white to-gray-50 shadow-xl rounded-2xl p-4 sm:p-6 lg:p-8 hover:shadow-2xl transition-all duration-300 border border-gray-100 flex flex-col h-full">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between mb-6 gap-3">
    <div class="flex items-center gap-3">
      <div class="p-3 bg-gradient-to-br from-green-500 to-teal-500 rounded-xl shadow-lg">
        <svg class="w-5 h-5 sm:w-6 sm:h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-lg sm:text-xl font-bold text-gray-800">Mes Budgets</h3>
        <p class="text-xs sm:text-sm text-gray-500">Gestion mensuelle</p>
      </div>
    </div>
  </div>

  <!-- Create Budget Form -->
  <form id="budgetForm" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4 mb-6 bg-gradient-to-br from-gray-50 to-white p-4 sm:p-6 rounded-xl border border-gray-200">
    <div class="sm:col-span-2 lg:col-span-1">
      <label for="month" class="block text-xs sm:text-sm font-medium text-gray-700 mb-2">Mois</label>
      <div class="relative">
        <select name="month" id="month" required
                class="w-full border border-gray-300 rounded-lg px-3 sm:px-4 py-2 sm:py-3 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200 appearance-none bg-white">
          <option value="">S√©lectionner...</option>
          <option value="1">Janvier</option>
          <option value="2">F√©vrier</option>
          <option value="3">Mars</option>
          <option value="4">Avril</option>
          <option value="5">Mai</option>
          <option value="6">Juin</option>
          <option value="7">Juillet</option>
          <option value="8">Ao√ªt</option>
          <option value="9">Septembre</option>
          <option value="10">Octobre</option>
          <option value="11">Novembre</option>
          <option value="12">D√©cembre</option>
        </select>
        <svg class="absolute right-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </div>
    </div>
    <div class="sm:col-span-2 lg:col-span-1">
      <label for="amount" class="block text-xs sm:text-sm font-medium text-gray-700 mb-2">Montant (MAD)</label>
      <input type="number" name="amount" id="amount" step="0.01" placeholder="Ex: 5000" required
             class="w-full border border-gray-300 rounded-lg px-3 sm:px-4 py-2 sm:py-3 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200">
    </div>
    <div class="sm:col-span-2 lg:col-span-1">
      <label for="categoryId" class="block text-xs sm:text-sm font-medium text-gray-700 mb-2">Cat√©gorie</label>
      <div class="relative">
        <select id="categoryId" name="categoryId" required
                class="w-full border border-gray-300 rounded-lg px-3 sm:px-4 py-2 sm:py-3 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200 appearance-none bg-white">
          <option value="">S√©lectionner...</option>
          <% categories.forEach(cat => { %>
            <option value="<%= cat.id %>"><%= cat.name %></option>
          <% }) %>
        </select>
        <svg class="absolute right-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-gray-400 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </div>
    </div>
    <div class="sm:col-span-2 lg:col-span-3 flex justify-end mt-2">
      <button type="submit"
              class="w-full sm:w-auto bg-gradient-to-r from-green-500 to-teal-500 text-white px-4 sm:px-6 py-2 sm:py-3 rounded-lg hover:from-green-600 hover:to-teal-600 transition-all duration-200 shadow-lg hover:shadow-xl font-medium flex items-center justify-center gap-2">
        <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        <span class="text-sm sm:text-base">Ajouter Budget</span>
      </button>
    </div>
  </form>

  <!-- List of Budgets -->
  <div class="flex-1 overflow-y-auto max-h-96">
    <ul id="budgetList" class="space-y-3">
      <% if (budgets && budgets.length > 0) { %>
        <% budgets.forEach(budget => { %>
          <% 
            const monthNames = ['', 'Jan', 'F√©v', 'Mar', 'Avr', 'Mai', 'Juin', 'Juil', 'Ao√ªt', 'Sep', 'Oct', 'Nov', 'D√©c'];
            const monthName = monthNames[budget.month] || budget.month;
          %>
          <li class="group p-3 sm:p-4 border border-gray-200 rounded-xl bg-gradient-to-r from-gray-50 to-gray-100 hover:from-green-50 hover:to-teal-50 transition-all duration-200">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-3">
              <div class="flex-1 w-full sm:w-auto">
                <div class="flex items-center gap-2 mb-2">
                  <span class="inline-flex items-center px-2 sm:px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-700">
                    üìÖ <%= monthName %>
                  </span>
                  <span class="inline-flex items-center px-2 sm:px-3 py-1 rounded-full text-xs font-semibold bg-indigo-100 text-indigo-700">
                    <%= budget.Category ? budget.Category.name : "N/A" %>
                  </span>
                </div>
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="text-base sm:text-lg font-bold text-gray-800"><%= budget.amount %> MAD</span>
                </div>
              </div>
              <div class="flex gap-2 w-full sm:w-auto opacity-100 sm:opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                <button class="editBudget flex-1 sm:flex-none bg-blue-500 hover:bg-blue-600 text-white px-3 py-2 rounded-lg text-xs sm:text-sm transition-all duration-200 shadow-md hover:shadow-lg flex items-center justify-center gap-1" 
                        data-id="<%= budget.id %>" 
                        data-month="<%= budget.month %>" 
                        data-amount="<%= budget.amount %>" 
                        data-categoryid="<%= budget.categoryId %>" 
                        title="Modifier">
                  <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                  </svg>
                  <span class="hidden sm:inline">Modifier</span>
                </button>
                <button class="deleteBudget flex-1 sm:flex-none bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded-lg text-xs sm:text-sm transition-all duration-200 shadow-md hover:shadow-lg flex items-center justify-center gap-1" 
                        data-id="<%= budget.id %>" 
                        title="Supprimer">
                  <svg class="w-3 h-3 sm:w-4 sm:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                  <span class="hidden sm:inline">Supprimer</span>
                </button>
              </div>
            </div>
          </li>
        <% }) %>
      <% } else { %>
        <li class="text-center py-12">
          <svg class="w-12 h-12 sm:w-16 sm:h-16 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <p class="text-gray-500 font-medium text-sm sm:text-base">Aucun budget trouv√©</p>
          <p class="text-gray-400 text-xs sm:text-sm mt-1">Cr√©ez votre premier budget ci-dessus</p>
        </li>
      <% } %>
    </ul>
  </div>
</div>
