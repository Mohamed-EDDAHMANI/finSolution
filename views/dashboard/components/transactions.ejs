<!-- Transaction Form -->
<div class="bg-gradient-to-br from-white to-gray-50 shadow-xl rounded-2xl p-8 hover:shadow-2xl transition-all duration-300 border border-gray-100">
  <div class="flex items-center gap-3 mb-6">
    <div class="p-3 bg-gradient-to-br from-green-500 to-emerald-500 rounded-xl shadow-lg">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
    </div>
    <h3 class="text-xl font-bold text-gray-800">Nouvelle Transaction</h3>
  </div>

  <form id="transactionForm" class="space-y-4">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Type</label>
      <select name="type" class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200">
        <option value="income">ðŸ’° Revenu</option>
        <option value="expense">ðŸ’¸ DÃ©pense</option>
      </select>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">CatÃ©gorie</label>
      <select name="categoryId" class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200">
        <% categories.forEach(cat => { %>
          <option value="<%= cat.id %>"><%= cat.name %></option>
        <% }) %>
      </select>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Montant (MAD)</label>
      <input type="number" name="amount" step="0.01" placeholder="Ex: 150.00"
        class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200">
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2">Date</label>
      <input type="date" name="date"
        class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition-all duration-200">
    </div>
    <button type="submit"
      class="bg-gradient-to-r from-green-500 to-emerald-500 text-white px-6 py-3 rounded-lg hover:from-green-600 hover:to-emerald-600 w-full transition-all duration-200 shadow-lg hover:shadow-xl font-medium flex items-center justify-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
      </svg>
      <span>Ajouter Transaction</span>
    </button>
  </form>
</div>

<!-- Recent Transactions Table -->
<div class="bg-gradient-to-br from-white to-gray-50 shadow-xl rounded-2xl p-8 col-span-2 hover:shadow-2xl transition-all duration-300 border border-gray-100">
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center gap-3">
      <div class="p-3 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-xl shadow-lg">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
      </div>
      <h3 class="text-xl font-bold text-gray-800">Transactions RÃ©centes</h3>
    </div>
  </div>

  <div class="overflow-x-auto">
    <table class="w-full text-left">
      <thead>
        <tr class="bg-gradient-to-r from-gray-100 to-gray-200 border-b-2 border-gray-300">
          <th class="px-6 py-4 text-sm font-semibold text-gray-700 rounded-tl-lg">Date</th>
          <th class="px-6 py-4 text-sm font-semibold text-gray-700">CatÃ©gorie</th>
          <th class="px-6 py-4 text-sm font-semibold text-gray-700">Montant</th>
          <th class="px-6 py-4 text-sm font-semibold text-gray-700">Type</th>
          <th class="px-6 py-4 text-sm font-semibold text-gray-700 rounded-tr-lg">Actions</th>
        </tr>
      </thead>
      <tbody id="transactionsTable">
        <% if (!transactions || transactions.length === 0) { %>
          <tr>
            <td colspan="5" class="text-center py-12">
              <svg class="w-16 h-16 mx-auto mb-3 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
              <p class="text-gray-500 font-medium">Aucune transaction disponible</p>
            </td>
          </tr>
        <% } else { %>
          <% transactions.forEach((trx, index) => { %>
            <tr class="border-b border-gray-200 hover:bg-gradient-to-r hover:from-blue-50 hover:to-cyan-50 transition-all duration-200" data-id="<%= trx.id %>">
              <td class="px-6 py-4 text-sm text-gray-700">
                <div class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                  <%= trx.date.toLocaleDateString('fr-FR') %>
                </div>
              </td>
              <td class="px-6 py-4 text-sm">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-indigo-100 text-indigo-700">
                  <%= categories.find(cat => cat.id === trx.categoryId)?.name || 'N/A' %>
                </span>
              </td>
              <td class="px-6 py-4 text-sm font-semibold <%= trx.type === 'expense' ? 'text-red-600' : 'text-green-600' %>">
                <div class="flex items-center gap-1">
                  <% if (trx.type === 'expense') { %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"></path>
                    </svg>
                  <% } else { %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                    </svg>
                  <% } %>
                  <%= trx.type === 'expense' ? '-' : '+' %><%= trx.amount %> MAD
                </div>
              </td>
              <td class="px-6 py-4 text-sm">
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium <%= trx.type === 'expense' ? 'bg-red-100 text-red-700' : 'bg-green-100 text-green-700' %>">
                  <%= trx.type === 'expense' ? 'ðŸ’¸ DÃ©pense' : 'ðŸ’° Revenu' %>
                </span>
              </td>
              <td class="px-6 py-4 text-sm">
                <div class="flex gap-2">
                  <button class="editTransaction text-blue-600 hover:text-blue-800 transition-colors duration-200 p-2 hover:bg-blue-50 rounded-lg" 
                    data-id="<%= trx.id %>" title="Ã‰diter">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  </button>
                  <button class="deleteTransaction text-red-600 hover:text-red-800 transition-colors duration-200 p-2 hover:bg-red-50 rounded-lg" 
                    data-id="<%= trx.id %>" title="Supprimer">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  </button>
                </div>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
